<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background"
        android:layout_width="400dp"
        android:layout_height="410dp"
        android:background="@android:color/transparent"
        android:src="@drawable/fragment_scroll" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/retropix"
            android:text="You got"
            android:textAlignment="center"
            android:textSize="28sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dialog_animated_roll"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/animated_roll"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/dialog_collectible_image"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="100dp"
            android:src="@drawable/collectible_lilyhat"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_collectible_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/retropix"
            android:paddingHorizontal="70dp"
            android:text="Crying Maple"
            android:textSize="28sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/dialog_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/retropix"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:text="Cool Beans!"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>
