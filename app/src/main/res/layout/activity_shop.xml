<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_forest" />

    <LinearLayout
        android:id="@+id/llShopLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:fontFamily="@font/retropix"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="Make a Wish..."
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgWell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_well" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRoll"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/retropix"
                android:onClick="btnRollClicked"
                android:paddingStart="18dp"
                android:paddingTop="10dp"
                android:paddingEnd="8dp"
                android:text="1 for 100"
                android:textSize="28sp"
                app:icon="@drawable/ic_coin"
                app:iconPadding="0dp"
                app:iconSize="28dp"
                app:iconTint="@null" />

            <Button
                android:id="@+id/btnTenRoll"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/retropix"
                android:onClick="btnTenRollClicked"
                android:paddingStart="12dp"
                android:paddingTop="10dp"
                android:paddingEnd="8dp"
                android:text="10 for 900"
                android:textSize="28sp"
                app:icon="@drawable/ic_coin"
                app:iconPadding="0dp"
                app:iconSize="28dp"
                app:iconTint="@null" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_back"
            android:onClick="btnClickedBack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_coin"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="6dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_coin" />

            <TextView
                android:id="@+id/money_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:fontFamily="@font/retropix"
                android:gravity="end"
                android:paddingTop="4sp"
                android:text="1000"
                android:textAlignment="viewEnd"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>