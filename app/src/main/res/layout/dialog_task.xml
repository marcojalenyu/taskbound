<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOutline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="8dp"
        app:contentPadding="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#F6EAD0"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:id="@+id/llTaskHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgTaskIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:srcCompat="@drawable/enemy_slime" />

                    <EditText
                        android:id="@+id/etTaskName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/retropix"
                        android:inputType="text"
                        android:paddingTop="6dp"
                        android:singleLine="true"
                        android:text="Task Name"
                        android:textSize="20sp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDescOutline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#000000"
                    app:cardCornerRadius="8dp"
                    app:contentPadding="2dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="8dp"
                        app:contentPadding="10dp">

                        <EditText
                            android:id="@+id/etTaskDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/retropix"
                            android:gravity="start|top"
                            android:inputType="textMultiLine"
                            android:lineSpacingExtra="6sp"
                            android:lines="4"
                            android:maxLines="4"
                            android:text="Description"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/etDeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:fontFamily="@font/retropix"
                    android:inputType="none"
                    android:text="Deadline"
                    android:textColor="#524D4D" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgHealth"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/ic_health" />

                    <TextView
                        android:id="@+id/tvHealth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/retropix"
                        android:text="1"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/ic_coin" />

                    <TextView
                        android:id="@+id/tvCoins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/retropix"
                        android:text="1"
                        android:textColor="#000000" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/retropix"
                    android:text="Update" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</LinearLayout>